{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2020",
    "noEmit": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["packages"]
}
