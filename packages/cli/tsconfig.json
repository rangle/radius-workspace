  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./build/cli",
    "importHelpers": false,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["test", "build"]
}